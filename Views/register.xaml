<Page x:Class="Stationer.register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stationer"
      mc:Ignorable="d"
            Background="White"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Title="login" Loaded="register_loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Регістрація" VerticalAlignment="Top" FontSize="65"/>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 30, 0" TextWrapping="Wrap" Text="Логін:" VerticalAlignment="Top"  FontSize="55"/>
        <TextBox Style="{StaticResource textBox}" x:Name="loginTextBox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="645"  FontSize="55"/>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 30, 0" TextWrapping="Wrap" Text="Пароль:" VerticalAlignment="Top"  FontSize="55"/>
        <TextBox Style="{StaticResource textBox}" x:Name="passwordTextBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="645" FontSize="55"/>
        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 30, 0" TextWrapping="Wrap" Text="Повне ім'я:" VerticalAlignment="Top"  FontSize="55"/>
        <TextBox Style="{StaticResource textBox}" x:Name="fullNameTextBox" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="645" FontSize="55"/>
        <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 30, 0" TextWrapping="Wrap" Text="Телефон:" VerticalAlignment="Top"  FontSize="55"/>
        <TextBox Style="{StaticResource textBox}" x:Name="phoneTextBox" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="645" FontSize="55"/>
        <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 30, 0" TextWrapping="Wrap" Text="Пошта:" VerticalAlignment="Top"  FontSize="55"/>
        <TextBox Style="{StaticResource textBox}" x:Name="emailTextBox" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="645" FontSize="55"/>
        <TextBlock x:Name="exceptionTextBlock" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="55" Visibility="Collapsed" Foreground="#FFE82828"/>
        <Button Style="{StaticResource button}" Grid.Row="7" Grid.ColumnSpan="2" Content="Зареєструватися" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="55" Click="RegisterButton_Click"/>
        

    </Grid>
</Page>
